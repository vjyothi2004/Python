def split_list(lst):
    mid = len(lst) // 2
    first_half = []
    second_half = []
    for i in range(len(lst)):
        if i < mid:
            first_half.append(lst[i])
        else:
            second_half.append(lst[i])
    return first_half, second_half

# Example
numbers = [1, 2, 3, 4, 5, 6]
print("Split list:", split_list(numbers))
